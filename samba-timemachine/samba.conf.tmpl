[global]
workgroup               = WORKGROUP
netbios name            = TIMECAPSULE
security                = user
passdb backend          = tdbsam
smb ports               = 445
log level               = 1

# disable things we don't need
server role             = standalone
server services         = -dns, -nbt
load printers           = no
printing                = bsd
printcap name           = /dev/null
disable spoolss         = yes
disable netbios         = yes

# Apple configuration
# Taken from: https://wiki.samba.org/index.php/Configure_Samba_to_Work_Better_with_Mac_OS_X
vfs objects                                 = fruit streams_xattr
fruit:metadata                              = stream
fruit:model                                 = TimeCapsule6
fruit:posix_rename                          = yes
fruit:veto_appledouble                      = no
fruit:nfs_aces                              = no
fruit:wipe_intentionally_left_blank_rfork   = yes
fruit:delete_empty_adfiles                  = yes

# Security
username map                = /etc/samba/users.map
client min protocol         = SMB2
server min protocol         = SMB2
idmap config * : backend    = tdb
idmap config * : range      = 300000-400000

[Data]
fruit:time machine          = yes
fruit:time machine max size = REPLACE_TM_SIZEB
browseable                  = Yes
comment                     = Apple TimeMachine Backup Target
path                        = /backups
read only                   = No
valid users                 = timemachine
writable                    = yes

